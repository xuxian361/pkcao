<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:onClick="onClick">


    <LinearLayout android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:background="@drawable/bg_2"
                  android:onClick="onClick">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <include android:layout_width="match_parent"
                     android:layout_height="60dp"
                     layout="@layout/topbar_back"/>

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@null"
                    android:layout_centerVertical="true"
                    android:id="@+id/btn_delete"
                    android:scaleType="fitCenter"
                    android:padding="7dp"
                    android:layout_marginRight="15dp"
                    android:layout_alignParentRight="true"
                    android:text="删除" style="@style/txt_font_14_grey"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/scrollView_detial"
                    android:paddingBottom="5dp"
                    android:visibility="visible">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                >

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                    >
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="20dp"
                                android:background="@color/white2"/>
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@color/transparent5" android:paddingLeft="10dp"
                                android:paddingTop="6dp" android:paddingRight="10dp" android:paddingBottom="6dp">
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txt_title"
                                    style="@style/txt_font_14_black"
                                    android:maxLines="2"
                                    android:layout_centerVertical="true"
                                    android:textStyle="bold"
                                    android:layout_toLeftOf="@+id/txt_count"
                                    android:padding="2dp"
                                    android:gravity="left"/>
                            <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txt_count"
                                    style="@style/txt_font_12_black"
                                    android:textStyle="italic"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerVertical="true"/>
                            <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/txt_content"
                                    style="@style/txt_font_12_black"
                                    android:padding="2dp"
                                    android:layout_below="@+id/txt_title"
                                    android:layout_marginTop="10dp"/>
                        </RelativeLayout>
                        <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:background="@color/transparent5"
                        >
                            <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:text="赞"
                                    android:id="@+id/btn_add"
                                    android:background="@drawable/corner_all_white2_strok"
                                    android:gravity="center"
                                    style="@style/txt_font_14_grey"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/btn_comments"
                                    android:layout_marginRight="10dp"/>

                            <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:text="评论"
                                    android:id="@+id/btn_comments"
                                    android:background="@drawable/corner_all_white2_strok"
                                    android:gravity="center"
                                    style="@style/txt_font_14_grey"
                                    android:layout_centerVertical="true"
                                    android:layout_toLeftOf="@+id/btn_share"
                                    android:layout_marginRight="10dp"/>

                            <TextView
                                    android:layout_width="60dp"
                                    android:layout_height="30dp"
                                    android:text="分享"
                                    android:id="@+id/btn_share"
                                    android:gravity="center"
                                    android:layout_alignParentRight="true"
                                    android:layout_marginRight="10dp"
                                    android:background="@drawable/corner_all_white2_strok"
                                    style="@style/txt_font_14_grey"
                                    android:layout_centerVertical="true"/>
                        </RelativeLayout>
                        <TextView android:layout_width="match_parent"
                                  android:layout_height="10dp"
                                  android:background="@color/white2"/>
                        <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                            <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center"
                                    android:id="@+id/relative_video"
                                    android:visibility="gone">
                                <ImageView
                                        android:layout_width="match_parent"
                                        android:layout_height="220dp"
                                        android:id="@+id/img"
                                        android:scaleType="fitCenter"
                                        android:layout_centerInParent="true"
                                />
                                <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:id="@+id/img_play"
                                        android:layout_centerInParent="true"
                                        android:src="@drawable/icon_play"
                                />
                            </RelativeLayout>
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/linear_img"
                                    android:layout_marginTop="16dp"
                                    android:layout_marginBottom="16dp"
                                    android:gravity="top|center">
                            </LinearLayout>

                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="top"
                                    android:id="@+id/linear_comments"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:orientation="vertical"
                                    android:visibility="invisible">

                                <RelativeLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent">
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="大家怎么说的?"
                                            style="@style/txt_font_14_grey"
                                            android:textSize="16sp"/>

                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="查看更多>>"
                                            style="@style/txt_font_14_black"
                                            android:textSize="13sp"
                                            android:layout_alignParentRight="true"
                                            android:id="@+id/txt_check_more_comments"/>
                                </RelativeLayout>

                                <LinearLayout
                                        android:orientation="vertical"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/linear_comments_content"
                                />

                            </LinearLayout>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>