<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:onClick="onClick">

    <include android:layout_width="match_parent"
             android:layout_height="60dp"
             layout="@layout/topbar_back"/>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/corner_all_orange1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
        <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="+1"
                android:id="@+id/btn_add"
                style="@style/txt_font_14_black"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"/>
        <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_toRightOf="@+id/btn_add"
                android:layout_centerVertical="true"
                android:layout_margin="5dp"
                android:id="@+id/txt_1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/txt_1"
                android:layout_toLeftOf="@+id/txt_2" android:gravity="center">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apple婊12万谁会买？估计要自己器官都不够了！！！ "
                    android:id="@+id/txt_title"
                    style="@style/txt_font_14_black" android:textStyle="bold" android:maxLines="2"
                    android:padding="3dp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="（12.3万+） "
                    android:id="@+id/txt_count" style="@style/txt_font_12_black"/>
        </LinearLayout>
        <TextView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/btn_share"
                android:layout_margin="5dp"
                android:id="@+id/txt_2"/>
        <TextView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:text="分享"
                android:id="@+id/btn_share"
                style="@style/txt_font_14_black"
                android:layout_alignParentRight="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/lv_detail"
                android:padding="10dp"
                android:scrollbars="none" android:layout_marginTop="50dp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:orientation="vertical">
            <Button
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="更多"
                    android:id="@+id/btn_more" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                    android:background="@drawable/corner_all_light_blue_strok"
                    style="@style/txt_font_14_black" android:layout_marginTop="1dp" android:gravity="center"/>
            <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/scrollView_detial"
                    android:background="@drawable/corner_all_bg_white_stroke_blue" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:visibility="gone"
                    android:layout_marginBottom="10dp">
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:paddingTop="10dp" android:paddingBottom="25dp">
                    <RelativeLayout
                            android:layout_width="320dp"
                            android:layout_height="180dp" android:layout_marginTop="10dp"
                            android:layout_gravity="center_horizontal">
                        <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:id="@+id/img_video" android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp" android:scaleType="fitCenter"
                                android:src="@color/green"/>
                        <ImageView
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:id="@+id/img_play" android:layout_centerInParent="true"
                                android:src="@drawable/icon_play" android:scaleType="fitCenter"/>
                    </RelativeLayout>

                    <it.sephiroth.android.library.widget.HListView
                            android:layout_width="match_parent"
                            android:layout_height="80dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp"
                            android:id="@+id/lv_images"/>
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="内容........内容........内容........内容........内容........内容........内容........内容........"
                            android:id="@+id/txt_content" android:layout_marginLeft="20dp"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="15dp" style="@style/txt_font_14_white" android:padding="5dp"/>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

    </RelativeLayout>

</LinearLayout>